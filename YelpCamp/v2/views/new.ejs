<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add your cat in the camp!</h1>
        <div style="width: 50%; margin: 35px auto;">
            <!--action: needs the name of the post method in app.js-->
            <form action="/cats" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block">Submit!</button>
                </div>
            </form>
            <a href="/cats">Go Back</a>
        </div>
        
    </div>
</div>
<% include partials/footer %>