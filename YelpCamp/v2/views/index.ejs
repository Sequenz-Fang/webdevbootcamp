<% include partials/header %>

<!--make everything in a bootstrap container-->
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to cat home!</h1>
            <p>View our hand-picked cats!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/cats/new">Add your cat!</a>
            </p>
        </div>
    </header>
    
    <!--grid part-->
    <div class="row text-center" style="display:flex; flex-wrap:wrap">

        <!--the card part of each cat    -->
        <% cats.forEach(function(cat){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= cat.image%>">
                    <div class="caption">
                        <h4><strong><%= cat.name %></strong></h4>
                    </div>
                    <p>
                        <a href="/cats/<%= cat._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
        
        
    </div>
</div>


<% include partials/footer %>