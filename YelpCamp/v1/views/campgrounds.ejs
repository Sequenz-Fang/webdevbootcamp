<% include partials/header %>





<!--make everything in a bootstrap container-->
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to cat home!</h1>
            <p>View our hand-picked cats!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add your cat!</a>
            </p>
        </div>
    </header>
    
    <!--grid part-->
    <div class="row text-center" style="display:flex; flex-wrap:wrap">
        <!--<div class="col-lg-12">-->
        <!--    <h3>Our most popular cats!</h3>-->
        <!--</div>-->
            
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image%>">
                    <div class="caption">
                        <h4><strong><%= campground.name %></strong></h4>
                    </div>
                </div>
            </div>
        <% }) %>
        
        
    </div>
</div>


<% include partials/footer %>